mixin select-item(item)
  .header__select-item
    span.header__select-item-text=item 

mixin custom-select(name)
  .header__select
    .header__select-header
      span.header__select-current=name
      .header__select-icon
        img.header__select-icon-img(src='../media/svg/Select-icon.svg' alt="")
    .header__select-body
      +select-item('Post Header')
      +select-item('Post Layout')
      +select-item('Share Buttons')
      +select-item('Gallery Post')
      +select-item('Video Post')

header.header
  .header__mobile
    .header__mobile-top
      img.header__logo(src="../media/svg/Logotype.svg" alt="")
      .header__close-btn
        span.header__mobile-cross
    .header__bottom_mobile
      +custom-select('Demos')
      +custom-select('Post')
      +custom-select('Features')
      +custom-select('Categories')
      +custom-select('Shop')
      a.header__link(href="") Buy Now

  .header__top
    .header__burger
      span.header__burger-menu
    img.header__logo(src="../media/svg/Logotype.svg" alt="")
    .header__top_right
      input.header__text-field(type="text" placeholder="search")
      button.header__search
  .header__bottom
    +custom-select('Demos')
    +custom-select('Post')
    +custom-select('Features')
    +custom-select('Categories')
    +custom-select('Shop')
    a.header__link(href="") Buy Now